#Quick Default Flag Distribution Check
df['default_flag'].value_counts(normalize=True)

#Corelation with default values
numeric_df = df.select_dtypes(include=['float64', 'int64'])
numeric_df.corr()['default_flag'].sort_values(ascending=False)

#grade corelation with default values
df.groupby("grade")["default_flag"].mean().sort_values(ascending=False)

#Created the grade summary data frame
grade_summary = df.groupby("grade").agg(
    total_loans=("default_flag", "count"),
    default_rate=("default_flag", "mean"),
    avg_interest=("int_rate", "mean"),
    avg_loan_amount=("loan_amnt", "mean")
).sort_values("default_rate", ascending=False)
grade_summary

#Added the FICO Risk Bands the data frame df
df['fico_band'] = pd.cut(
    df['fico_low'],
    bins=[300, 600, 650, 700, 750, 850],
    labels=['Very Poor', 'Poor', 'Fair', 'Good', 'Excellent']
)

#Created the fico summary data frame
fico_summary = df.groupby('fico_band').agg(
    total_loans=('default_flag', 'count'),
    default_rate=('default_flag', 'mean'),
    avg_interest=('int_rate', 'mean')
).sort_values('default_rate', ascending=False)
fico_summary

#Added principal_loss column in the data frame df
df['principal_loss'] = df['loan_amnt'] - df['total_rec_prncp']

#Created the fico profit data frame
fico_profit = df.groupby('fico_band').agg(
    total_loans=('default_flag', 'count'),
    default_rate=('default_flag', 'mean'),
    total_interest=('total_rec_int', 'sum'),
    total_principal_loss=('principal_loss', 'sum')
).sort_values('default_rate', ascending=False)
fico_profit

#Added the net profit to the fico profit data frame
fico_profit['net_profit'] = fico_profit['total_interest'] - fico_profit['total_principal_loss']
fico_profit.sort_values('net_profit', ascending=False)

#Calculated the default rate by loan term
df.groupby('term_months')['default_flag'].mean()

#Calculated the interest rate by loan term
df.groupby('term_months')['int_rate'].mean()

#Added the income band to the dataframe df
df['income_band'] = pd.qcut(
    df['annual_inc'],
    q=5,
    labels=['Very Low', 'Low', 'Medium', 'High', 'Very High']
)
